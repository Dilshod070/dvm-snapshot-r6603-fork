CXX=clang++ -g -O2
COPT=-c -I../../Zlib/include -g
ZLIB	= zlib
ZLIBDIR	= ../../Zlib/Release

OBJS=\
	inter.o  \
	potensyn.o  \
	statread.o  \
	treeinter.o \
	statprintf.o \
    statlist.o \
    statinter.o \
    interface.o \
    stat.o \
    integration.o \

all: $(OBJS) integration.dll
	@echo "*** COMPILING Dll DONE"

clean:
	rm -f integration.o integration.dll
cleanall:
	rm -f integration.o integration.dll

potensyn.o:
	$(CXX) $(COPT) potensyn.cpp
inter.o:
	$(CXX) $(COPT) inter.cpp
statread.o:
	$(CXX) $(COPT) statread.cpp
treeinter.o:
	$(CXX) $(COPT) treeinter.cpp
# statprintf.o:
# 	$(CXX) $(COPT) statprintf.cpp
statinter.o:
	$(CXX) $(COPT) -std=c++11 statinter.cpp
statlist.o:
	$(CXX) $(COPT) -std=c++11 statlist.cpp
interface.o:
	$(CXX) $(COPT) -std=c++11 interface.cpp -fdeclspec
stat.o:
	$(CXX) $(COPT) -std=c++11 stat.cpp
integration.o:
	$(CXX) $(COPT) -std=c++11 integration.cpp -fdeclspec
integration.dll:
	clang++ -shared -o integration.dll $(OBJS) ../../Zlib/*.o
